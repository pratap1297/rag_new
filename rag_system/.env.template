# RAG System Environment Configuration

# API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# System Configuration
RAG_ENVIRONMENT=development
RAG_DEBUG=true
RAG_DATA_DIR=data
RAG_LOG_DIR=logs

# LLM Configuration
RAG_LLM_PROVIDER=groq
RAG_LLM_MODEL=mixtral-8x7b-32768
RAG_LLM_API_KEY=

# API Configuration
RAG_API_HOST=0.0.0.0
RAG_API_PORT=8000

# Monitoring
RAG_LOG_LEVEL=INFO

# ServiceNow Configuration
SERVICENOW_INSTANCE=your_instance_name
SERVICENOW_USERNAME=your_username
SERVICENOW_PASSWORD=your_password

# ServiceNow Integration Settings
SERVICENOW_FETCH_INTERVAL=15
SERVICENOW_BATCH_SIZE=100
SERVICENOW_MAX_INCIDENTS=1000
SERVICENOW_PRIORITY_FILTER=1,2,3
SERVICENOW_STATE_FILTER=1,2,3
SERVICENOW_DAYS_BACK=7
SERVICENOW_ENABLE_CACHING=true
SERVICENOW_CACHE_TTL=1
SERVICENOW_CHANGE_DETECTION=true
SERVICENOW_CATEGORIES=
SERVICENOW_ASSIGNED_GROUPS=

# Logging
LOG_LEVEL=INFO
